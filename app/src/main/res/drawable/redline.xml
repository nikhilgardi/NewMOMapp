<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:color="@color/submit_color" />
    <item android:state_focused="false" android:state_selected="true"  android:state_pressed="false" android:color="@color/submit_color" />

    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:color="@color/submit_color" />
    <item android:state_focused="true" android:state_selected="true"  android:state_pressed="false" android:color="@color/submit_color" />

    <!-- Pressed -->
    <!--    Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="true" android:color="@color/submit_color" />
    <item android:state_focused="false" android:state_selected="true"  android:state_pressed="true" android:color="@color/submit_color" />

    <!--    Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="true" android:color="@color/submit_color" />
    <item android:state_focused="true" android:state_selected="true"  android:state_pressed="true" android:color="@color/submit_color" />
</selector>