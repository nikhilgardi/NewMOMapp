<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">



    <!--<TextView-->
        <!--android:padding="@dimen/five"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="New Text"-->
        <!--android:textSize="@dimen/twenty"-->
        <!--android:textColor="@color/listview_color"-->
        <!--android:id="@+id/tvdialogTitle"-->
        <!--android:gravity="center" />-->

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Layout1"
        android:padding="10dp"
        >
        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_weight="1"
            android:id="@+id/tvResponseText"
            android:layout_gravity="center_horizontal" />
        <TextView

            android:textSize="@dimen/sixteen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_weight="1"
            android:id="@+id/tvResponseParameter"
            android:layout_gravity="center_horizontal" />



    </LinearLayout>
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Layout2"
        android:padding="10dp"
        >

        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_weight="1"
            android:id="@+id/tvTransactionText"
            android:layout_gravity="center_horizontal" />
        <TextView

            android:textSize="@dimen/sixteen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_weight="1"
            android:minLines="2"
            android:id="@+id/tvTranasactionParameter"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Layout3"
        android:padding="10dp"
        >
        <TextView

            android:textSize="@dimen/sixteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"

            android:id="@+id/tvOneLineResponse"
            android:layout_gravity="center_horizontal" />

        </LinearLayout>


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lbtn"
        android:padding="10dp"
                            >

        <Button
            style="@style/buttonBlueStyle"
            android:layout_weight="1"
            android:id="@+id/btnOk"
            android:padding="@dimen/ten"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fourty"
            android:text="@string/NewPayment" />


    </LinearLayout>

</LinearLayout>
    </ScrollView>